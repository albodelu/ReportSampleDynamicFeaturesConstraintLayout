<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.White" parent="Base.Button.Colored">
        <item name="android:textColor">@color/chewy_blue</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="Button.Primary" parent="Base.Button.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="Base.Button.Colored" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:foreground">@color/transparent</item>
    </style>

    <style name="Text.Paragraph" parent="RobotoLight">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="RobotoLight">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>